page {
  background-color: #f8f8f8;
}
.top-shop {
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
.top-shop .qr-line {
  padding: 20rpx 0;
  margin: 20rpx -20rpx;
  position: relative;
}
.top-shop .qr-line::before, .top-shop .qr-line::after {
  content: '';
  position: absolute;
  top: 10rpx;
  left: -10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #f8f8f8;
  z-index: 10;
}
.top-shop .qr-line::after {
  right: -10rpx;
  left: auto;
}
.qrcode-info {
  display: flex;
  flex-direction: column;
}
.qrcode-info .qr-title {
  font-size: 32rpx;
  font-weight: bold;
}
.qrcode-info .qrns {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #999;
}
.qrcode-info .qrns .del {
  text-decoration: line-through;
}
.order-info {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
.shop-card {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
.shop-card .shopcard-area {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 0;
}
.shop-card .shopcard-area .vtops {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.shop-card .shopcard-area .vbots {
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}
.shop-card .shopcard-area .vbots .text {
  margin-bottom: 10rpx;
}
.shop-card .shopcard-area .shopname {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}
.shop-card .shopcard-area .vicons {
  display: flex;
  align-items: center;
}
.shop-card .shopcard-area .vt-ico {
  border-radius: 50%;
  border: 1rpx solid #333;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.q-cont {
  display: flex;
  align-items: center;
  justify-content: center;
}

