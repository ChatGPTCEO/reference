.content {
  position: fixed;
  height: 100%;
  width: 100%;
  overflow-y: scroll;
}
.zhuige-post-icon-set {
  position: absolute;
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  text-align: center;
}
.zhuige-post-bar {
  padding: 20rpx 0 0;
  z-index: 5;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.zhuige-post-icon {
  width: 20%;
  opacity: 0;
  transition: all 0.5s ease-out;
  margin-bottom: 20rpx;
}
.active {
  opacity: 1;
  -webkit-transform: translateY(-40px);
          transform: translateY(-40px);
  transition: 0.5s cubic-bezier(0.6, 2, 0.3, 0.8);
}
.zhuige-post-icon view {
  height: 96rpx;
  width: 96rpx;
  line-height: 96rpx;
  border-radius: 50%;
  margin: 0 auto 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.zhuige-post-icon view image {
  width: 80rpx;
  height: 80rpx;
}
.zhuige-post-icon text {
  display: block;
  font-size: 24rpx;
}
.zhuige-post-icon:nth-child(1) {
  transition-delay: 0.01s;
}
.zhuige-post-icon:nth-child(2) {
  transition-delay: 0.05s;
}
.zhuige-post-icon:nth-child(3) {
  transition-delay: 0.1s;
}
.zhuige-post-icon:nth-child(4) {
  transition-delay: 0.15s;
}
.zhuige-post-icon:nth-child(5) {
  transition-delay: 0.2s;
}
.zhuige-post-icon:nth-child(6) {
  transition-delay: 0.35s;
}
.zhuige-post-icon:nth-child(7) {
  transition-delay: 0.40s;
}
.zhuige-post-icon:nth-child(8) {
  transition-delay: 0.45s;
}
.zhuige-post-icon:nth-child(9) {
  transition-delay: 0.50s;
}
.zhuige-post-icon:nth-child(10) {
  transition-delay: 0.55s;
}

