page {
  background-color: #f8f8f8;
}
.userinfo-box {
  display: flex;
  padding: 20rpx;
  background-color: #ffdd00;
  align-items: center;
  padding-bottom: 100rpx;
}
.userinfo-box .user-avatar {
  width: 106rpx;
  height: 106rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}
.userinfo-box .user-info-rg .user-name {
  font-size: 36rpx;
}
.userinfo-box .user-info-rg .user-id {
  font-size: 24rpx;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  color: #666;
}
.userinfo-box .user-info-rg .copy {
  border: 1rpx solid #666;
  border-radius: 200rpx;
  padding: 0 12rpx;
  font-size: 16rpx;
  margin-left: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
}
.order-gird {
  border-radius: 12rpx;
  overflow: hidden;
  margin: -50rpx 20rpx 0;
}
.order-start-vip {
  margin: -70rpx 20rpx 0;
  padding: 0 20rpx;
  background-color: #1B1F23;
  border-radius: 12rpx;
  height: 100rpx;
  font-size: 20rpx;
  color: #d1b16b;
  display: flex;
  align-items: center;
  padding-bottom: 50rpx;
}
.apply-box {
  border-radius: 12rpx;
  overflow: hidden;
  margin: 20rpx;
}
.user-title {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.more-service {
  border-radius: 12rpx;
  overflow: hidden;
  margin: 20rpx;
}
.wallet-box {
  border-radius: 12rpx;
  overflow: hidden;
  margin: 20rpx;
}
.grid-small {
  font-size: 24rpx;
  color: #999;
}
.grid-content {
  font-size: 36rpx;
  color: #333;
}

