/**index.wxss**/
.msgcontainer {
  display: block;
  margin: 0;
  overflow: hidden;
}
.msgcontainer .rosterInfo {
  height: 72rpx;
  width: 72rpx;
}
.msgcontainer .rosterInfo .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
}
.msgcontainer .c_content {
  max-width: 400rpx;
  border-radius: 10rpx;
  padding: 25rpx 20rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}
.self .rosterInfo {
  float: right;
}
.self .c_content {
  float: right;
  background: rgb(155, 200, 255);
  margin-right: 35rpx;
}
.roster .rosterInfo {
  float: left;
}
.roster .c_content {
  float: left;
  border: 1px solid rgb(240, 240, 240);
  margin-left: 35rpx;
}
.c_content .cimage {
  max-width: 400rpx;
  max-height: 300rpx;
}
.time {
  font-size: 18rpx;
  text-align: center;
  color: #aaa;
  padding: 20rpx 10rpx;
}
.saudio {
  width: 300rpx;
  overflow: hidden;
}
.voice_frmae {
  overflow: hidden;
}
.voice_frmae .voice {
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.voice_frmae .voice_duration {
  margin-left: 20rpx;
}

/**index.wxss**/
.container {
  display: block;
  padding: 0rpx 30rpx;
  background: #fefefe;
}
.inputer {
  height: 100rpx;
  width: 750rpx;
  position: fixed;
  bottom: 20rpx;
  left: 5rpx;
  border-top: 1rpx solid #ccc;
  background: white;
}
.inputer .voice {
  height: 60rpx;
  width: 60rpx;
  float: left;
  margin: 10rpx;
  margin-top: 20rpx;
}
.inputer .input {
  margin: 8rpx 20rpx 10rpx 20rpx;
  width: 650rpx;
  height: 80rpx;
  margin-left: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 30rpx;
  text-indent: 15rpx;
}
.inputer .recorder {
  margin: 8rpx 20rpx 10rpx 20rpx;
  width: 650rpx;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  margin-left: 80rpx;
  line-height: 80rpx;
}
.back {
  height: 64rpx;
  width: 120rpx;
}
.back .back_kmg {
  width: 40rpx;
  height: 40rpx;
  margin-top: 12rpx;
}
.history_button {
  position: fixed;
  right: 66px;
  width: 64px;
  height: 18px;
  line-height: 32px;
  margin-top: -12px;
  font-size: 12px;
  color: #319de1;
}
.delete_button {
  position: fixed;
  right: 2px;
  width: 64px;
  height: 18px;
  line-height: 32px;
  margin-top: -12px;
  font-size: 12px;
  color: #319de1;
}
.delete_button:hover {
  color: #880000;
}

