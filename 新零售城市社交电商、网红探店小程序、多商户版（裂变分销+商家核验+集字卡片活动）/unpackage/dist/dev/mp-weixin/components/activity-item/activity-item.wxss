.goods-list-item {
  width: 100%;
  background-color: #fff;
  position: relative;
}
.goods-list-item .goods-img {
  width: 100%;
  overflow: hidden;
}
.goods-list-item .goods-info {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 0;
}
.goods-list-item .goods-info .tag-style {
  margin-right: 8rpx;
  vertical-align: middle;
}
.goods-list-item .goods-info .g-text {
  vertical-align: top;
}
.goods-list-item .goods-info .goods-info-text {
  width: 100%;
  line-height: 32rpx;
  height: 64rpx;
}
.goods-list-item .goods-price {
  color: #dd524d;
  font-size: 24rpx;
  padding: 0 0 8rpx;
  display: flex;
  align-items: center;
}
.goods-list-item .goods-price .goods-btn {
  margin-left: auto;
}
.goods-list-item .goods-price .goods-btn .g-small {
  color: #999;
  font-size: 24rpx;
}
.goods-list-item .goods-price .goods-price-strong {
  font-size: 28rpx;
}
.goods-list-item .goods-price .goods-price-small {
  font-size: 0.7em;
  color: #999;
}
.goods-list-item .goods-price .red {
  color: #dd524d;
}
.goods-list-item .goods-price .text-del {
  text-decoration: line-through;
  color: #999;
}
.people-fixed {
  position: absolute;
  right: 0;
  top: 0;
  min-width: 200rpx;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2;
  text-align: center;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  padding: 0 10rpx;
}

