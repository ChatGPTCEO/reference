page {
  padding-bottom: 60rpx;
}
.luckbox {
  margin-top: 30rpx;
}
.top_page .title {
	font-weight: 600;
}
.user_info {
  display: flex !important;
  align-items: center;
  flex-wrap: nowrap;
  float: left;
  font-size: 28rpx;
}
.user_info .avatar {
  margin-right: 20rpx;
}
.user_info .avatar ._img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: top;
  object-fit: cover;
}
.user_info .types {
  font-size: 24rpx;
  color: #999;
  margin-left: -3px;
}
.user_info .types .type {
  margin-left: 3px;
}
.typelist .bd {
	margin-left: -30rpx;
}
.typelist .item {
	color: #999;
  font-size: 28rpx;
  letter-spacing: 1px;
  margin-left: 30rpx
}
.typelist .item .span_item {
	margin-right: 6rpx;
}
.content .bd {
	color: #707070;
	line-height: 1.8;
}
.images .bd image {
	width: 100%;
	border-radius: 3px;
	margin-bottom: 28rpx;
}
.images .bd image:last-child {
	margin-bottom: 0;
}
.contact .bd .remark_info {
	color: #666;
	font-size: 24rpx;
	margin-top: 24rpx;
	text-align: center;
}
.contact .bd .contact_item {
	margin-bottom: 10px;
}
.contact .bd .contact_item:last-child {
	margin-bottom: 0;
}
.contact .contact_item .u_icon {
  margin-left: 5px;
  font-weight: 600;
}
.contact .bd .copy_btn {
  margin-left: 8px;
}
.contact .count_number {
  margin: 0 3px;
}
.foot_action_blank {
  height: 170rpx;
}
.foot_action {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  opacity: .9;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  height: 90rpx;
  padding: 40rpx 0;
}
.foot_action_container {
  width: 690rpx;
  margin: 0 auto;
}
.foot_action .btns {
  width: 690rpx;
  display: flex;
  justify-content: space-between;
}
.foot_action .btns .btn {
  width: 330rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 0;
}
.foot_action .btns .btn::after {
  border: none;
}
.foot_action .btns .btn.btn1 {
  background-color: #ffc107;
}
.foot_action .btns .btn.btn2 {
  background-color: #07c160;
}
.foot_action .btns .btn.btn3 {
  background-color: #61e7ce;
}
.foot_action .btns .btn .icon {
  margin-right: 6rpx;
  display: inline-block;
  color: #fff;
}
.foot_action .btns .btn.contact .icon_vip {
  font-weight: 400;
  color: #d8b66c;
}
.contact_popup {
	width: 690rpx;
}
.contact_popup .box {
	background-color: #fff;
	padding: 40rpx 32rpx;
	text-align: center;
  border-radius: 3px;
}
.contact_popup .btns {
	margin: 30rpx 0;
	display: flex;
}
.contact_popup .btns .btn {
	width: 47%;
	color: #fff;
}
.contact_popup .btns .btn1 {
	background-color: #5ca75b;
}
.contact_popup .btns .btn2 {
	background-color: #d8b66c;
}
.contact_popup .tip3 {
	color: #999;
	font-size: 24rpx;
}

