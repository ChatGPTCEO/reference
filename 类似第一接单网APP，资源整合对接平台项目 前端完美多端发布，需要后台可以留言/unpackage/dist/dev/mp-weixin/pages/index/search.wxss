
page {
  padding-bottom: 30rpx;
}
.search_blnak {
	height: 136rpx
}
.search {
	position: fixed;
	left: 0;
	z-index: 99;
	box-shadow: 0 2px 12px rgb(100 101 102 / 12%);
  width: 100%;
  background-color: #fff;
  padding: 15px 0 17px 0;
}
.search .container {
	display: flex;
	align-items: center;
  flex-wrap: nowrap;
}
.search_box {
  background-color: #f7f8fa;
  color: #666;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 3px;
  padding: 0 10px;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  flex: 1;
}
.search_box .icon {
  margin-right: 6px;
}
.search_box .input {
  flex: 1;
}
.search_right {
	margin-left: 10px;
	font-size: 28rpx;
	color: #666;
}
.search_hot {
	padding: 20px 0 20px 0;
	color: #666;
}
.search_hot .title {
	letter-spacing: 3px;
}
.search_hot .items {
	margin-top: 15px;
	margin-left: -10px;
}
.search_hot .items .item {
	background-color: #fff;
	padding: 5px 10px;
	margin-left: 10px;
	margin-bottom: 10px;
	display: inline-block;
	font-size: 28rpx;
	border-radius: 3px;
}

