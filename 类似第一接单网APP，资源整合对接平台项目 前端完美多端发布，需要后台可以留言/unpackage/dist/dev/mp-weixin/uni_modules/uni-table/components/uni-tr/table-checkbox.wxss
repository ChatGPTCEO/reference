.index_title .txt {
  position: relative;
  padding-left: 15rpx;
  float: left;
  letter-spacing: 3px;
  font-weight: 600;
}
.index_title .txt::before {
  position: absolute;
  top: 12rpx;
  left: 0;
  width: 10rpx;
  height: 24rpx;
  border-radius: 32rpx;
  background: #f4645f;
  content: '';
}
.index_title .more {
