<view class="content"><block wx:if="{{user}}"><view class="zhuige-home-bg"><image mode="aspectFill" src="{{user.cover}}"></image></view></block><block wx:if="{{user}}"><view class="zhuige-user-card"><view class="zhuige-block"><view class="zhuige-user-title"><view class="zhuige-user-info-block"><view><image mode="aspectFill" src="{{user.avatar}}"></image><block wx:if="{{user.vip}}"><image mode="aspectFill" src="/static/lvv.png"></image></block></view><view><text>{{user.nickname}}</text></view></view><view class="zhuige-user-info-btn"><button open-type="share"><uni-icons vue-id="586b6b82-1" type="redo-filled" size="24" bind:__l="__l"></uni-icons></button><block wx:if="{{!user.is_me}}"><block wx:if="{{user.is_follow}}"><view data-event-opts="{{[['tap',[['clickFollowUser',['$event']]]]]}}" class="follow active" bindtap="__e">{{user.is_fans?'互关':'已关注'}}</view></block><block wx:else><view data-event-opts="{{[['tap',[['clickFollowUser',['$event']]]]]}}" class="follow" bindtap="__e">+关注</view></block></block></view></view><block wx:if="{{stat}}"><view class="zhuige-user-count"><view data-event-opts="{{[['tap',[['openLink',['/pages/user/friend/friend?user_id='+user.user_id+'&tab=follow']]]]]}}" bindtap="__e"><text>关注</text><view>{{stat.follow_count}}</view></view><view data-event-opts="{{[['tap',[['openLink',['/pages/user/friend/friend?user_id='+user.user_id+'&tab=fans']]]]]}}" bindtap="__e"><text>粉丝</text><view>{{stat.fans_count}}</view></view><view><text>圈子</text><view>{{stat.forum_count}}</view></view><view><text>获赞</text><view>{{stat.likeme_count}}</view></view></view></block><block wx:if="{{user}}"><view class="zhuige-user-line"><image mode="aspectFill" src="../../../static/pen.png"></image><text>签名：</text><text>{{user.sign}}</text></view></block><block wx:if="{{user.certify&&user.certify.status==1}}"><view class="zhuige-user-line"><image mode="aspectFill" src="{{user.certify.icon}}"></image><text>认证：</text><text>{{user.certify.name}}</text></view></block></view></view>