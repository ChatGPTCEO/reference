.contact-box {
  padding: 20rpx;
}
.contact-box .contact-info {
  border-radius: 6rpx;
  background-color: #fff;
  text-align: center;
  padding: 20rpx;
}
.contact-box .contact-info .c-title {
  display: flex;
  align-items: center;
  justify-content: center;
}
.contact-box .contact-info .c-title .c-text {
  font-size: 28rpx;
  color: #333;
  margin: 0 10rpx;
}
.contact-box .contact-info .c-title .c-warning {
  color: #ffdd00;
  font-size: 80rpx;
}
.contact-box .contact-info .c-qrcode {
  padding: 15rpx;
  border: 1rpx solid #ffdd00;
  width: 230rpx;
  height: 230rpx;
  border-radius: 6rpx;
  margin: 20rpx auto;
}
.contact-box .contact-info .us-info {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.contact-box .contact-info .us-info .us-bold {
  font-size: 36rpx;
}
.contact-box .contact-info .us-info .text {
  font-size: 24rpx;
  color: #666;
}

