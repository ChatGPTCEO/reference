page {
  width: 100%;
  background-color: #fff;
}
.feedback-container {
  padding: 30rpx;
}
.feedback-container .item-box {
  margin-bottom: 40rpx;
}
.feedback-container .item-box .title-box {
  font-size: 28rpx;
  color: #222222;
}
.feedback-container .item-box .title-box text {
  margin-right: 10rpx;
  color: #ffdd00;
}
.feedback-container .item-box .title-box .des {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #999999;
}
.feedback-container .item-box .tab-box {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.feedback-container .item-box .tab-box .tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 66rpx;
  margin-right: 20rpx;
  border: 1px solid #BFBFBF;
  border-radius: 33px;
  font-size: 28rpx;
}
.feedback-container .item-box .tab-box .tab-item.active {
  background: #ffdd00;
  color: #333;
  border-color: #ffdd00;
}
.feedback-container .item-box .picker {
  margin-top: 30rpx;
}
.feedback-container .item-box .picker .picker-box {
  position: relative;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}
.feedback-container .item-box .picker .picker-box .iconfont {
  position: absolute;
  right: 30rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 22rpx;
  color: #282828;
}
.feedback-container .item-box .textarea-box {
  background: #F5F5F5;
  border-radius: 10rpx;
}
.feedback-container .item-box .textarea-box textarea {
  width: 100%;
  height: 300rpx;
  margin-top: 30rpx;
  padding: 20rpx 20rpx 0;
  font-size: 28rpx;
  line-height: 1.5;
}
.feedback-container .item-box .textarea-box .num {
  color: #999;
  text-align: right;
  padding: 20rpx;
}
.feedback-container .item-box .upload-img {
  display: flex;
  flex-wrap: wrap;
}
.feedback-container .item-box .upload-img .img-wrapper {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 20rpx 20rpx 0;
}
.feedback-container .item-box .upload-img .img-wrapper image {
  width: 158rpx;
  height: 158rpx;
}
.feedback-container .item-box .upload-img .img-wrapper .iconfont {
  position: absolute;
  right: -15rpx;
  top: -20rpx;
  font-size: 40rpx;
  color: #ffdd00;
}
.feedback-container .item-box .upload-img .add-img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 158rpx;
  height: 158rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.feedback-container .item-box .upload-img .add-img .iconfont {
  color: #B5B5B5;
  font-size: 55rpx;
}
.feedback-container .item-box .input-box input {
  display: block;
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.feedback-container .item-box .sub-btn {
  height: 90rpx;
  line-height: 90rpx;
  background: #ffdd00;
  color: #333;
  font-size: 32rpx;
  text-align: center;
  border-radius: 45rpx;
}
.feedback-container .item-box .link {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.feedback-container .item-box .link .iconfont {
  margin-top: 6rpx;
  font-size: 22rpx;
}
.feedback-container .success {
  z-index: 10;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.feedback-container .success .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.feedback-container .success .con {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 500rpx;
  height: 540rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #282828;
}
.feedback-container .success .con image {
  width: 149rpx;
  height: 230rpx;
}
.feedback-container .success .con .btn {
  width: 340rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 38rpx;
  text-align: center;
  color: #333;
  background: #ffdd00;
  border-radius: 45rpx;
}

