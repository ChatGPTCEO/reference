<view><view class="header_view" style="{{('padding-top:'+navHeight+'px')}}"><image class="avatar" src="{{profile.avatar}}" data-event-opts="{{[['tap',[['changeAvatar',['$event']]]]]}}" bindtap="__e"></image><view class="nick"><text>{{profile.nick_name||profile.username}}</text><image class="qrcode" src="../../static/pages/image/qrcode.jpg" data-event-opts="{{[['tap',[['goQrcode',['$event']]]]]}}" bindtap="__e"></image></view><view class="id"><text>{{"ID："+profile.user_id}}</text></view></view><view class="container"><view class="item"><view class="sleft"><text class="ltext">ID</text></view><view class="sright"><text class="rtext">{{profile.user_id}}</text></view></view><view class="item"><view class="sleft"><text class="ltext">用户名</text></view><view class="sright"><text class="rtext">{{profile.username}}</text></view></view><view class="item"><view class="sleft"><text class="ltext">昵称</text></view><view class="sright"><text class="rtext">{{profile.nick_name}}</text></view></view><view data-event-opts="{{[['tap',[['unbindMobile',['$event']]]]]}}" class="item" bindtap="__e"><view class="sleft"><text class="ltext">手机号</text></view><view class="sright"><text class="rtext">{{profile.mobile}}</text></view></view><view class="item"><view class="sleft"><text class="ltext">邮箱</text></view><view class="sright"><text class="rtext">{{profile.email}}</text></view></view><view data-event-opts="{{[['tap',[['goAbout',['$event']]]]]}}" class="item" bindtap="__e"><view class="sleft"><text class="ltext">关于我们</text></view></view><view class="item nb"><view class="sleft"><text class="ltext">微信绑定</text></view><view class="sright"><block wx:if="{{binded}}"><text data-event-opts="{{[['tap',[['unbindHandler',['$event']]]]]}}" class="rtext" bindtap="__e">已绑定，点击解除</text></block><block wx:if="{{!binded}}"><button class="bindBtnClass" open-type="getUserInfo" data-event-opts="{{[['getuserinfo',[['bindGetUserInfo',['$event']]]]]}}" bindgetuserinfo="__e">点击绑定</button></block></view></view></view><view data-event-opts="{{[['tap',[['logout',['$event']]]]]}}" class="bindBtn sgray" bindtap="__e"><text>退出</text></view></view>