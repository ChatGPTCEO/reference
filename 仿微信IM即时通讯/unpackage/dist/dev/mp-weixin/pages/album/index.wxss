
.status_bar{width: 100%; height: 25px; position: fixed; left: 0; top: 0; z-index: 99;}
.head{position: relative;}
.head .cu-bar{top: 25px;}
.userbar{position: absolute; right: 0; bottom: 0;}
.userbar, .cu-bar.topbar, .topbar .cuIcon-cameraadd:before{text-shadow: 0 0 2px #000;}
.topbar{box-shadow:none !important;}
.topbar .action{color: #FFFFFF;}
.topbar .content{display: none;}
.albumbg{max-height: 560rpx; overflow: hidden;}
.albumbg image{width: 100%; min-height: 400rpx; display: block;}
.cu-card.dynamic>.cu-item>.text-content{margin-bottom: 0;}
.cu-card.dynamic>.cu-item .onlyimg{height: auto; max-height: 320rpx; overflow: hidden;}
.chat-video .bg-video{height: auto !important; max-height: 360rpx !important;}
.chat-video .bg-video image{min-height: 360rpx; width: 100%;}

