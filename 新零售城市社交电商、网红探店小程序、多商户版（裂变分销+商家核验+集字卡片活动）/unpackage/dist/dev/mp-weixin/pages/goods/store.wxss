page {
  background-color: #f8f8f8;
}
.store-bg {
  position: relative;
  z-index: 0;
  width: 100%;
  min-height: 70rpx;
}
.store-card {
  margin: -50rpx 20rpx 0;
  border-radius: 12rpx;
  min-height: 200rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
  padding: 20rpx 20rpx 0;
  position: relative;
  z-index: 10;
}
.follow-number {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  line-height: 1.2em;
  border-radius: 6rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  margin: 10rpx;
  margin-left: auto;
  padding: 10rpx;
}
.follow-number .text {
  font-size: 24rpx;
  color: #333;
}
.follow-number .small {
  font-size: 20rpx;
  color: #999;
}
.store-grid {
  margin-top: 10rpx;
}
.store-grid .grid-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}
.s-title {
  font-size: 42rpx;
  color: #333;
  padding: 0 0 20rpx;
}
.shopcard-area {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.shopcard-area .vtops {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.shopcard-area .vbots {
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}
.shopcard-area .vbots .text {
  margin-bottom: 10rpx;
}
.shopcard-area .shopname {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}
.shopcard-area .vicons {
  display: flex;
  align-items: center;
}
.shopcard-area .vt-ico {
  border-radius: 50%;
  border: 1rpx solid #333;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.cell-grid {
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.tabs-box {
  padding: 20rpx;
}
.shop-list {
  margin: 0 20rpx;
  padding: 20rpx 20rpx 10rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.shop-list .shop-item {
  margin-bottom: 20rpx;
}
.foot-logo {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.foot-logo .text {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}
.foot-logo .logo {
  width: 100rpx;
  height: 100rpx;
}
.no-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  border: none;
  background: none !important;
  padding: 0;
  margin: 0;
  height: 100%;
  opacity: 0;
}

