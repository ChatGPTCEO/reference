.meituan {
  margin: 0 auto;
  background-color: #ffffff;
  width: 100%;
  color: #ff0000;
  font-size: 28rpx;
}
.meituan .content {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
  border: 10rpx;
  background-color: #fff5f4;
}
.meituan .content .left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.meituan .content .left .sum {
  font-size: 32rpx;
}
.meituan .content .left .sum .num {
  font-size: 40rpx;
  font-weight: bold;
}
.meituan .content .centre {
  margin-left: 40rpx;
  max-width: 400rpx;
}
.meituan .content .centre .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
}
.meituan .content .right {
  margin-left: auto;
}
.meituan .content .right .immediate-use {
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 25rpx;
  line-height: 50rpx;
  background-color: #ffdd00 !important;
  font-size: 24rpx;
  border: none;
  word-break: keep-all;
  color: #333;
}
.meituan .tips {
  padding: 0 20rpx;
  border: 10rpx;
  background-color: #f4f4f5;
  position: relative;
  color: #909399;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  font-size: 24rpx;
}
.meituan .tips .circle-left,
.meituan .tips .circle-right {
  position: absolute;
  height: 36rpx;
  width: 18rpx;
  background-color: #fff;
}
.meituan .tips .circle-right {
  border-radius: 40rpx 0 0 40rpx;
  right: 0;
  top: -18rpx;
}
.meituan .tips .circle-left {
  border-radius: 0 40rpx 40rpx 0;
  left: 0;
  top: -18rpx;
}
.meituan .tips .rule {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.meituan .tips .rule text {
  margin-right: 10rpx;
  flex: 1;
}
.checkbox-ing {
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
}
.checkbox-ing.active {
  border: none;
  background: none;
}

