.refund-wrapper .item {
  position: relative;
  display: flex;
  padding: 25rpx 30rpx;
  background-color: #fff;
}
.refund-wrapper .item:after {
  content: ' ';
  position: absolute;
  right: 0;
  bottom: 0;
  width: 657rpx;
  height: 1px;
  background: #F0F0F0;
}
.refund-wrapper .item .img-box {
  width: 130rpx;
  height: 130rpx;
}
.refund-wrapper .item .img-box image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 16rpx;
}
.refund-wrapper .item .info {
  display: flex;
  flex-direction: column;
  width: 440rpx;
  margin-left: 26rpx;
}
.refund-wrapper .item .info .tips {
  color: #868686;
  font-size: 20rpx;
}
.refund-wrapper .item .info .price {
  margin-top: 15rpx;
  font-size: 26rpx;
}
.refund-wrapper .item .check-box {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.refund-wrapper .item .check-box .iconfont {
  font-size: 40rpx;
  color: #CCCCCC;
}
.refund-wrapper .item .check-box .icon-xuanzhong1 {
  color: #ffdd00;
}
.refund-wrapper .form-box {
  padding-left: 30rpx;
  margin-top: 18rpx;
  background-color: #fff;
}
.refund-wrapper .form-box .form-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  font-size: 30rpx;
}
.refund-wrapper .form-box .item-txt {
  align-items: center;
  width: 100%;
  padding: 30rpx 30rpx 30rpx 0;
}
.refund-wrapper .form-box .item-txtarea {
  padding: 30rpx 30rpx 30rpx 0;
}
.refund-wrapper .form-box .item-txtarea textarea {
  display: block;
  width: 400rpx;
  height: 100rpx;
  font-size: 30rpx;
  text-align: right;
}
.refund-wrapper .form-box .icon-jiantou {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #BBBBBB;
}
.refund-wrapper .upload-box {
  padding: 30rpx;
  background-color: #fff;
}
.refund-wrapper .upload-box .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}
.refund-wrapper .upload-box .title .des {
  color: #BBBBBB;
}
.refund-wrapper .upload-box .upload-img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.refund-wrapper .upload-box .upload-img .img-item {
  position: relative;
  width: 156rpx;
  height: 156rpx;
  margin-right: 24rpx;
  margin-top: 20rpx;
}
.refund-wrapper .upload-box .upload-img .img-item image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 8rpx;
}
.refund-wrapper .upload-box .upload-img .img-item .iconfont {
  position: absolute;
  right: -15rpx;
  top: -20rpx;
  font-size: 40rpx;
  color: #ffdd00;
}
.refund-wrapper .upload-box .upload-img .add-img {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 156rpx;
  height: 156rpx;
  margin-top: 20rpx;
  border: 1px solid #DDDDDD;
  border-radius: 3rpx;
  color: #BBBBBB;
  font-size: 24rpx;
}
.refund-wrapper .upload-box .upload-img .add-img .iconfont {
  margin-bottom: 10rpx;
  font-size: 50rpx;
}
.refund-wrapper .btn-box {
  width: 690rpx;
  height: 86rpx;
  margin: 70rpx auto;
  line-height: 86rpx;
  text-align: center;
  color: #333;
  background: #ffdd00;
  border-radius: 43rpx;
  font-size: 32rpx;
}

