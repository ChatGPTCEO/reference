}
.dialogoperation{
	display: flex;
	height: 80rpx;
	flex-shrink: 0;
	width: 100vw;
}
.cu-chat{overflow: hidden;}
.cu-chat.hasbg{background: no-repeat center; background-attachment: fixed; background-size: 30%; min-height: calc(100vh-190upx);}
.group-notice{max-height: 40vh; font-size: 32rpx; line-height: 50rpx; text-indent: 64rpx; text-align: left; white-space: pre-wrap;}
.cu-bar.foot, .face-contianer, .tool-contianer{-webkit-animation-duration: 0.3s;animation-duration: 0.3s;}
.cu-bar .action.record{flex: 1;}
.cu-bar .action.record .cu-btn{width: 100%;}
.face-contianer{height: 260px; width: 100%; z-index: 100; overflow: hidden;}
.face-faces{height: 430rpx; position: relative;}
.face-items{padding: 8rpx;}
.face-normal{position: relative; overflow: hidden; padding-bottom: 66rpx;}
.face-normal .face-item{padding: 10rpx; overflow: hidden;}
.face-normal .face-item image{max-width: 100%; width: 62rpx; height: 62rpx;}
.face-super .face-item .superface{-webkit-transform: scale(0.6);transform: scale(0.6); margin: -30rpx;}
.face-bar{position: absolute; right: 8rpx; bottom: 8rpx;}
.tool-contianer{height: 170px; width: 100%; z-index: 100;}
.tool-contianer .grid>view{margin-bottom: 20rpx;}
.recordbar{position: fixed; top: 50%; left: 50%; width: 460rpx; margin-left: -230rpx; height: 124rpx; margin-top: -62rpx; line-height: 62rpx; z-index: 999;}
.bottom0{bottom: 0;}
.cu-bar.input{padding-right: 0;}
.cu-bar.input .areainput{max-height: 148rpx; line-height: 50rpx; padding: 6rpx 0; overflow: hidden;}
.popcontainer{position: absolute; left: 100rpx; background: #2C405A; padding: 10rpx; width: 320rpx;}
.popcontainer .cu-list.grid{background: none;}
.popcontainer .cu-list.grid>.cu-item{padding: 4rpx 10rpx; text-align: center;}
.popcontainer .cu-list.grid>.cu-item [class*=cuIcon]{font-size: 36rpx; margin-top: 0;}
.popcontainer .cu-list.grid>.cu-item text{color: #FFFFFF; font-size: 24rpx;}
.popcontainer::after{width: 20rpx; height: 20rpx; background: #2C405A; content: ''; left: 50%; margin-left: -10rpx; bottom: -8rpx; position: absolute; -webkit-transform: rotate(45deg); transform: rotate(45deg); border-radius: 4rpx;}

