
.dialogitem>.special-main {max-width: calc(100% - 160rpx); margin: 0 40rpx; display: flex; align-items: center; min-width: 450rpx;}
.dialogitem .special-content{width: 100%; background-color: #FFFFFF; border-radius: 6rpx; position: relative; overflow: visible;}
.dialogitem.self .special-content::after, .cu-chat .self .special-content::before{left: auto; right: -12rpx;}
.dialogitem .nickname{position: absolute; left: 150rpx; top: 20rpx; font-size: 24rpx;}
.dialogitem .nickname ~ .main, .cu-chat .cu-item .nickname ~ .special-main{margin-top: 30rpx;}
.highmode4 .content, .highmode2 .content{padding: 0 !important;}
.highmode4 .content{max-height: 400rpx; background: none; overflow: hidden; max-width: 260rpx !important;}
.chat-audio{line-height: 48rpx;}
.chat-audio.unread{position: relative;}
.chat-audio.unread::after{position: absolute;right: -52rpx; content: ''; width: 16rpx; height: 16rpx; border-radius: 50%; background-color: #e54d42; top: 50%; margin-top: -8rpx;}
.chat-audio.played{color: #8799A3;}
.chat-audio .cuIcon-sound{font-size: 38rpx; vertical-align: middle; margin: 0 10rpx;}
.chat-audio .self{-webkit-transform: rotateY(180deg);transform: rotateY(180deg); display: inline-block;}
.chat-audio-time::after{content: '"'; display: inline-block; padding-left: 4rpx;}
.chat-video .bg-video image{min-height: 250rpx; width: 400rpx;}
.chat-redpacket.light{color: #FFFFFF;}
.chat-location {display: block !important; overflow: hidden; padding: 0 !important;}
.chat-location image{width: 100%; display: block;}
.dialogitem>.main .content.chat-transfer{display: block; padding-bottom: 56rpx; min-width:380rpx; overflow: hidden;}
.transfer-bar{position: absolute; left: 0; bottom: 0; height: 40rpx; width: 100%; line-height: 40rpx;}
.transfer-icon{height: 80rpx; width: 80rpx; line-height: 80rpx; text-align: center; border: 4rpx solid #FFFFFF; border-radius: 50%;}
.transfer-icon .cuIcon-order{-webkit-transform: rotate(90deg);transform: rotate(90deg);}
.special-shareinfo .cu-item{padding: 16rpx; padding-right: 40rpx !important;}
.special-shareinfo .cu-item>.cu-avatar{left: 20rpx;}
.special-shareinfo .cu-item>.content{left: 112rpx; width: calc(100% - 156rpx) !important;}
.special-shareinfo .cu-item.arrow::before{right: 20rpx;}
.dialogitem .content .richtext{display: block; overflow: hidden; max-width: 100%;}

